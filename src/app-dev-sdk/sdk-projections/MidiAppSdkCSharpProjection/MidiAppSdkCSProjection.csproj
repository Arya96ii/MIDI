<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net8.0-windows10.0.20348.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
	<Platform>AnyCPU</Platform>
  </PropertyGroup>

	<PropertyGroup>
		<CsWinRTIncludes>Microsoft.Devices.Midi2</CsWinRTIncludes>
		<CsWinRTGeneratedFilesDir>$(OutDir)</CsWinRTGeneratedFilesDir>
	</PropertyGroup>

	<PropertyGroup>
		<GeneratedNugetDir>.\nuget\</GeneratedNugetDir>
		<NuspecFile>$(GeneratedNugetDir)Microsoft.Devices.Midi2.nuspec</NuspecFile>
		<OutputPath>$(GeneratedNugetDir)</OutputPath>
		<GeneratePackageOnBuild>true</GeneratePackageOnBuild>
		<AssemblyName>Microsoft.Devices.Midi2.CS</AssemblyName>
	</PropertyGroup>

	<ItemGroup>
    <PackageReference Include="Microsoft.Windows.CsWinRT" Version="2.0.3" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\..\sdk\midi-app-sdk.vcxproj" />
  </ItemGroup>

  <ItemGroup>
    <None Include="nuget\Microsoft.Devices.Midi2.nuspec" />
  </ItemGroup>

</Project>
