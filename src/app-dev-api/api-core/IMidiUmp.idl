// wraps the UMP type so we still quickly read/write packed data appropriately

import "MidiUmpPacketTypeEnum.idl";
import "MidiUmpMessageTypeEnum.idl";

namespace Windows.Devices.Midi2
{
	interface IMidiUmp
	{
		UInt64 Timestamp { get; set; };

		MidiUmpMessageType MessageType{ get; };
		MidiUmpPacketType MidiUmpPacketType{ get; };		// you can also get the equivalent with a cast

		Windows.Foundation.IMemoryBuffer RawData{ get; };

	};
}